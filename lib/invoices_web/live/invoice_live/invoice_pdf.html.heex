<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Invoice {@invoice.invoice_number}</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.5;
        color: #1f2937;
        background: white;
      }

      .invoice-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px;
        background: white;
      }

      .header {
        text-align: center;
        margin-bottom: 40px;
      }

      .header h1 {
        font-size: 32px;
        font-weight: 700;
        color: #1f2937;
        margin: 0;
      }

      .invoice-meta {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 40px;
      }

      .meta-box {
        background: #0d9488;
        color: white;
        padding: 16px;
        border-radius: 6px;
      }

      .meta-label {
        font-size: 12px;
        font-weight: 500;
        margin-bottom: 4px;
      }

      .meta-value {
        font-size: 18px;
        font-weight: 700;
      }

      .parties {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        margin-bottom: 40px;
      }

      .party-section {
        min-height: 140px;
      }

      .party-header {
        background: #0d9488;
        color: white;
        padding: 8px 12px;
        font-weight: 700;
        font-size: 14px;
        margin-bottom: 12px;
      }

      .party-content {
        font-size: 14px;
        line-height: 1.6;
      }

      .party-content div {
        margin-bottom: 4px;
      }

      .party-content .label {
        font-weight: 500;
        margin-right: 4px;
      }

      .services-table {
        border: 1px solid #d1d5db;
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 0;
      }

      .table-header {
        background: #0d9488;
        color: white;
      }

      .table-header th {
        padding: 12px;
        font-weight: 500;
        font-size: 14px;
        text-align: left;
        border: none;
      }

      .table-header th:nth-child(2),
      .table-header th:nth-child(3) {
        text-align: center;
      }

      .table-header th:nth-child(4) {
        text-align: right;
      }

      .service-row td {
        padding: 12px;
        border-bottom: 1px solid #d1d5db;
        font-size: 14px;
      }

      .service-row td:nth-child(2),
      .service-row td:nth-child(3) {
        text-align: center;
      }

      .service-row td:nth-child(4) {
        text-align: right;
        font-weight: 600;
      }

      .empty-row td {
        padding: 12px;
        border-bottom: 1px solid #f3f4f6;
        font-size: 14px;
        color: transparent;
      }

      .total-row {
        background: #eff6ff;
      }

      .total-row td {
        padding: 12px;
        font-weight: 700;
        font-size: 14px;
        border: none;
      }

      .total-row td:nth-child(1) {
        text-align: right;
      }

      .total-row td:nth-child(2) {
        text-align: right;
      }

      @media print {
        .invoice-container {
          padding: 20px;
        }
        
        body {
          background: white;
        }
      }

      /* Page break handling */
      .parties,
      .services-table {
        page-break-inside: avoid;
      }
    </style>
  </head>
  <body>
    <div class="invoice-container">
      <!-- Header -->
      <div class="header">
        <h1>SERVICE INVOICE</h1>
      </div>
      
<!-- Invoice Number and Date -->
      <div class="invoice-meta">
        <div class="meta-box">
          <div class="meta-label">INVOICE NO.</div>
          <div class="meta-value">{@invoice.invoice_number}</div>
        </div>
        <div class="meta-box">
          <div class="meta-label">DATE</div>
          <div class="meta-value">{Calendar.strftime(@invoice.date, "%-d/%-m/%Y")}</div>
        </div>
      </div>
      
<!-- Client and Bill To sections -->
      <div class="parties">
        <!-- Client -->
        <div class="party-section">
          <div class="party-header">CLIENT</div>
          <div class="party-content">
            <div><span class="label">Name:</span>{@client_info.name}</div>
            <div><span class="label">Address:</span>{@client_info.address}</div>
            <div>{@client_info.city_state_zip}</div>
            <div><span class="label">EIN:</span>{@client_info.ein}</div>
          </div>
        </div>
        
<!-- Bill To -->
        <div class="party-section">
          <div class="party-header">BILL TO</div>
          <div class="party-content">
            <div><span class="label">Name:</span>{@bill_to_info.name}</div>
            <div><span class="label">SWIFT/BIC:</span>{@bill_to_info.swift_bic}</div>
            <div><span class="label">Account Number:</span>{@bill_to_info.account_number}</div>
            <div><span class="label">Bank Name:</span>{@bill_to_info.bank_name}</div>
            <div style="font-size: 12px; margin-top: 4px;">{@bill_to_info.bank_address}</div>
          </div>
        </div>
      </div>
      
<!-- Services Table -->
      <table class="services-table">
        <thead class="table-header">
          <tr>
            <th>DESCRIPTION</th>
            <th>HOURS</th>
            <th>RATE</th>
            <th>AMOUNT</th>
          </tr>
        </thead>
        <tbody>
          <tr class="service-row">
            <td>{@invoice.description}</td>
            <td>-</td>
            <td>-</td>
            <td>{format_currency(@invoice.amount)}</td>
          </tr>
          <!-- Empty rows to match the design -->
          <%= for _ <- 1..8 do %>
            <tr class="empty-row">
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
              <td>&nbsp;</td>
            </tr>
          <% end %>
          <tr class="total-row">
            <td colspan="3">TOTAL</td>
            <td>{format_currency(@invoice.amount)}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </body>
</html>
